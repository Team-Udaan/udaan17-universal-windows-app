<Page
    x:Name="pageRoot"
    x:Class="udaan17_universal_windows_app.DevsPage"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:udaan17_universal_windows_app"
    xmlns:common="using:udaan17_universal_windows_app.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--
            TODO: Content should be placed within the following grid 
                  to show details for the current item
        -->
        <Grid Grid.Row="1" x:Name="contentRegion"/>

        <!-- Back button and page title -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="backButton" Margin="39,59,39,0" Command="{Binding NavigationHelper.GoBackCommand, ElementName=pageRoot}"
                        Style="{StaticResource NavigationBackButtonNormalStyle}"
                        VerticalAlignment="Top"
                        AutomationProperties.Name="Back"
                        AutomationProperties.AutomationId="BackButton"
                        AutomationProperties.ItemType="Navigation Button"/>
            <TextBlock Text="Developers" Style="{StaticResource HeaderTextBlockStyle}" Grid.Column="1" 
                        IsHitTestVisible="false" TextWrapping="NoWrap" VerticalAlignment="Bottom" Margin="0,0,30,40"/>
        </Grid>
        <Grid Grid.Row="1">
            <GridView ItemsSource="{Binding Item}">
                <!--GridView.Background>
                    <ImageBrush ImageSource="Assets/Devs.png" Stretch="UniformToFill" Opacity="70"/>
                </GridView.Background-->
                <GridView.Header>
                    <Grid Width="120">
                        
                    </Grid> 
                </GridView.Header>
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="400">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="Assets/profile.jpg" Height="50" Width="50" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding Name}" Style="{StaticResource SubheaderTextBlockStyle}" FontWeight="Bold"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="Assets/mail.jpeg" Height="50" Width="50" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding Email}" Style="{StaticResource SubheaderTextBlockStyle}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="Assets/phone.jpg" Height="50" Width="50" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding Contact}" Style="{StaticResource SubheaderTextBlockStyle}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="Assets/git.png" Height="50" Width="50" Margin="0,0,5,0"/>
                                    <HyperlinkButton Content="{Binding Git}" NavigateUri="{Binding Git}"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </Grid>
    </Grid>
</Page>
